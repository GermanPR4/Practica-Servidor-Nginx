server {
  listen 80;
  listen [::]:80;

  root /var/www/webPerfect/html;
  index index.html index.htm index.nginx-debian.html;
  server_name webPerfect;

  location / {
    auth_basic "√Årea restringida";
    auth_basic_user_file /etc/nginx/.htpasswd;

    allow 192.168.56.1;
